{
  "name": "fractal",
  "version": "0.1.0",
  "dependencies": {
    "@frctl/fractal": "^1.5.15",
    "@frctl/mandelbrot": "^1.10.3",
    "concurrent": "^0.3.2",
    "fs-extra": "^11.2.0",
    "replace-in-file": "^8.1.0"
  },
  "scripts": {
    "build:css": "node-sass src/scss/main.scss public/assets/css/main.css --no-source-map",
    "build:js": "webpack --mode production",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "node-sass --watch src/scss/main.scss public/assets/css/main.css",
    "watch:js": "webpack --watch --mode development",
    "copy-assets": "fractal copy-assets",
    "start": "npm-run-all --parallel copy-assets build watch:css watch:js start:fractal",
    "start:fractal": "concurrently \"fractal start --sync\" \" opn http://localhost:3001\"",
    "build:fractal": "fractal build"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "mini-css-extract-plugin": "^2.9.0",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "opn-cli": "^4.1.0",
    "portfinder": "^1.0.32",
    "postcss": "^8.4.40",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.8",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}
